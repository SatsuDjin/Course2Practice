@using Domain.Entities

@model IEnumerable<Clinic>

<h2>Клиники</h2>

<table class="table">
    <thead>
        <tr>
            <th>Название</th>
            <th>Город</th>
            <th>Адресс</th>
            <th>События</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var clinic in Model)
        {
            <tr>
                <td>@clinic.Name</td>
                <td>@clinic.City.Name</td>
                <td>@clinic.Address</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@clinic.ClinicId" class="btn btn-primary">Редактировать</a>
                    <a asp-action="Delete" asp-route-id="@clinic.ClinicId" class="btn btn-primary">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Создать</a>
