@using Domain.Entities
@model IEnumerable<Specialization>

<h2>Специальности</h2>

<table class="table">
    <thead>
        <tr>
            <th>Название</th>
            <th>События</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var specialization in Model)
        {
            <tr>
                <td>@specialization.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@specialization.SpecializationId" class="btn btn-primary">Реадактировать</a>
                    <a asp-action="Delete" asp-route-id="@specialization.SpecializationId" class="btn btn-primary">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Создать</a>

