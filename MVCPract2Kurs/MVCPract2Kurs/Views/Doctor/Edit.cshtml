@using Application.DTOs
@model DoctorViewModel

<h2>Редактор врача</h2>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input type="hidden" asp-for="DoctorId" />

    <div class="form-group">
        <label asp-for="FullName"></label>
        <input asp-for="FullName" class="form-control" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="BirthDate"></label>
        <input asp-for="BirthDate" class="form-control" type="date" />
        <span asp-validation-for="BirthDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Photo"></label>
        <input asp-for="Photo" class="form-control" />
        <span asp-validation-for="Photo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Клиники</label>
        <select asp-for="SelectedClinicIds" asp-items="@ViewBag.Clinics" class="form-control" multiple></select>
        <span asp-validation-for="SelectedClinicIds" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Специальности</label>
        <select asp-for="SelectedSpecializationIds" asp-items="@ViewBag.Specializations" class="form-control" multiple></select>
        <span asp-validation-for="SelectedSpecializationIds" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Сохранить</button>
</form>





